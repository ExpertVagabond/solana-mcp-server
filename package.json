{
  "name": "@ExpertVagabond/solana-mcp-server",
  "version": "1.0.0",
  "description": "Solana MCP server for wallet management, transaction handling, and program interactions on Solana blockchain",
  "main": "dist/index.js",
  "module": "./src/index.ts",
  "bin": {
    "solana-mcp-server": "./dist/index.js"
  },
  "type": "module",
  "scripts": {
